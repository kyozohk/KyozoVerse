rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read/write access for authenticated users
      allow read, write: if request.auth != null;
      
      // For public content, allow read access without authentication
      match /public/{publicFile=**} {
        allow read: if true;
      }
    }
  }
}
