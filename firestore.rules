
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /blogs/{blogId} {
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      // This rule allows reading single documents based on visibility or ownership.
      allow get: if resource.data.visibility == 'public' || (isSignedIn() && resource.data.authorId == request.auth.uid);
      // This rule allows querying the collection.
      // Logged-out users can only query for public posts.
      // Logged-in users can query for any post (the client-side code will filter further).
      allow list: if isSignedIn() || (request.query.where.size() > 0 && request.query.where[0][2] == 'public');
    }

    match /communities/{communityId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
