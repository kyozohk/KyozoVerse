
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for community membership in the top-level collection
    function isCommunityMember(communityId) {
      return request.auth != null && exists(/databases/$(database)/documents/communityMembers/$(request.auth.uid + '_' + communityId));
    }

    // Helper function to check if user is community owner/admin
    function isCommunityOwner(communityId) {
      return request.auth != null && 
             get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }

    // Communities can be read by anyone
    match /communities/{communityId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      // Allow delete only for community owner
      allow delete: if request.auth != null && 
                       get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }

    // Community members can be read by other members of that same community
    match /communities/{communityId}/members/{memberId} {
        allow read, write: if request.auth != null && request.auth.uid == memberId;
    }

    // Blogs (posts) rules
    match /blogs/{blogId} {
      // Allow anyone to read public posts
      allow read: if resource.data.visibility == 'public';
      
      // Allow community owners to read all posts in their community
      allow read: if request.auth != null && 
                     resource.data.communityId != null && 
                     isCommunityOwner(resource.data.communityId);
      
      // Allow community members to read private posts from their community
      // Check both communityId (new posts) and communityHandle (legacy posts)
      allow read: if request.auth != null && 
                     resource.data.visibility == 'private' &&
                     (
                       (resource.data.communityId != null && isCommunityMember(resource.data.communityId)) ||
                       resource.data.communityHandle != null
                     );

      // Allow authenticated users to read their own posts
      allow read: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Allow create for authenticated users (author must match)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      
      // Allow update/delete for:
      // 1. The post author, OR
      // 2. The community owner (if communityId exists)
      allow update, delete: if request.auth != null && 
                               (request.auth.uid == resource.data.authorId || 
                                (resource.data.communityId != null && isCommunityOwner(resource.data.communityId)));
    }

    // Users collection can be read by anyone
    // Allow write if: user is writing to their own document OR user is authenticated (for managing members)
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null; // Allow authenticated users to create new user documents
      allow update: if request.auth != null; // Allow authenticated users to update user documents (for community owners managing members)
      allow delete: if request.auth != null && request.auth.uid == userId; // Only user can delete their own
    }

    // Messages collections - organized by service
    // WhatsApp messages
    match /messages_whatsapp/{messageId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow webhook to write messages
    }
    
    // Email messages (future)
    match /messages_email/{messageId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // SMS messages (future)
    match /messages_sms/{messageId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // Telegram messages (future)
    match /messages_telegram/{messageId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // In-app messages (future)
    match /messages_app/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Community members collection
    match /communityMembers/{memberId} {
      // Allow authenticated users to read
      allow read: if request.auth != null;
      
      // Allow create/update for authenticated users
      allow create, update: if request.auth != null;
      
      // Allow delete for:
      // 1. The member themselves, OR
      // 2. The community owner
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId || 
                        isCommunityOwner(resource.data.communityId));
    }
  }
}
